<html>
<head>
    <title>{{ author.getName }}</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
    <div class="container">
        <h1>Springfield Library</h1>
        <h3>{{ author.getName }}</h3>
        <form action="/authors/{{ author.getId }}" method="post">
            <input name="_method" type="hidden" value="patch">
            <label for="new_name">Edit Author Name:</label>
            <input type="text" name="new_name" id="new_name">
            <button type="submit" class="btn btn-success">Submit</button>
        </form>

        <form action="/authors/{{ author.getId }}">
            <button type="submit" class="btn btn-info">Back to {{ author.getName }}</button>
        </form>




    </div>
</body>
</html>
